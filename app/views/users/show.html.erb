<% provide(:title, @user.name) %>
<h1><%= @year %>年<%= @month %>月の勤務表</h1>



<table class="table table-bordered">
  <thead>
    <tr>
      <th></th><th></th><th>出社</th><th></th><th></th><th>退社</th><th></th><th></th><th></th><th></th>
    </tr>
    <tr>
      <th>日付</th><th>曜日</th><th>時</th><th>分</th><th></th><th>時</th><th>分</th><th></th><th>勤務時間</th><th>備考</th>
    </tr>
  </thead>
  <% each_date_in_month(@year, @month) do |date, index| %>
  <tbody>
    <tr>
      <td><%= date_in_japanese(date, :month_day) %></td>
      <td><%= day_of_the_week_in_japanese(date, :short) %></td>
    <% if @time_cards[index] %>
      <td><%= time_string(@time_cards[index].in_at.hour) %></td>
      <td><%= time_string(@time_cards[index].in_at.min) %></td>
      <td></td>
      <td><%= time_string(@time_cards[index].out_at.hour) %></td>
      <td><%= time_string(@time_cards[index].out_at.min) %></td>
      <td></td>
      <td><%= work_hours(@time_cards[index].work_hours) %></td>
      <td></td>
    <% else %>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
    <% end %>
    </tr>    
  </tbody>
  <% end %>
</table>


    
    
